    <ImageView
        android:id="@+id/imageJack8"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="220dp"
        app:layout_constraintBottom_toTopOf="@id/textViewStavka"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageJack9"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="260dp"
        app:layout_constraintBottom_toTopOf="@id/textViewStavka"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageJohn"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toTopOf="@id/buttonJack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStavka" />

    <ImageView
        android:id="@+id/imageJohn2"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonJack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStavka" />

    <ImageView
        android:id="@+id/imageJohn3"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonJack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStavka" />

    <ImageView
        android:id="@+id/imageJohn4"
