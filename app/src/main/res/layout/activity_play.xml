    <ImageView
        android:id="@+id/imageJack6"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="140dp"
        app:layout_constraintBottom_toTopOf="@id/textViewStavka"
