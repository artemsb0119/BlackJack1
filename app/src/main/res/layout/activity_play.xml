    <ImageView
        android:id="@+id/imageJohn9"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginStart="260dp"
        app:layout_constraintBottom_toTopOf="@id/buttonJack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStavka" />

    <TextView
        android:id="@+id/textViewJohn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageJohn"
        app:layout_constraintBottom_toBottomOf="@id/imageJohn" />

    <TextView
        android:id="@+id/textViewJack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageJack"
        app:layout_constraintBottom_toBottomOf="@id/imageJack" />

    <TextView
        android:id="@+id/textViewJackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jack"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageJack" />

    <TextView
        android:id="@+id/textViewJohnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageJohn" />

    <TextView
        android:id="@id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textSize="40sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_white"
        android:textColor="?attr/colorPrimaryVariant"
        app:layout_constraintStart_toStartOf="@id/imageHome"
        app:layout_constraintEnd_toEndOf="@id/imageRestart"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonJack"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="Jack"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonX"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonX"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="X"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonJohn"
        app:layout_constraintStart_toEndOf="@id/buttonJack" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonJohn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="John"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonX" />

    <TextView
        android:id="@+id/textViewStavka"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/textview_white"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingEnd="10dp"
        android:textAlignment="textEnd"
        android:text="0"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@id/imageCardBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageCardBack"
        app:layout_constraintBottom_toBottomOf="@id/imageCardBack"/>

